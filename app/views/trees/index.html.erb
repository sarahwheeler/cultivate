<h1>Listing trees</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Variety</th>
      <th>Tree source</th>
      <th>Plant date</th>
      <th>Plant quantity</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trees.each do |tree| %>
      <tr>
        <td><%= tree.type %></td>
        <td><%= tree.variety %></td>
        <td><%= tree.tree_source %></td>
        <td><%= tree.plant_date %></td>
        <td><%= tree.plant_quantity %></td>
        <td><%= tree.notes %></td>
        <td><%= link_to 'Show', tree %></td>
        <td><%= link_to 'Edit', edit_tree_path(tree) %></td>
        <td><%= link_to 'Destroy', tree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

