<h1>Listing Gardens</h1>

<table>
  <thead>
    <tr>
      <th>Season</th>
      <th>Year</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @gardens.each do |garden| %>
      <tr>
        <td><%= garden.season %></td>
        <td><%= garden.year %></td>
        <td><%= garden.description %></td>
        <td><%= link_to 'View plants', {:controller => 'plants', :garden_id => garden.id} %></td>
        <td><%= link_to 'Show', garden %></td>
        <td><%= link_to 'Edit', edit_garden_path(garden) %></td>
        <td><%= link_to 'Destroy', garden, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

